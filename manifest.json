{
  "manifest_version": 3,
  "name": "Fodder",
  "version": "5.0.1",
  "description": "YouTube content quality scoring - organic vs synthetic",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://returnyoutubedislikeapi.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
